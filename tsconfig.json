{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@applicationLayer|controllers": ["src/application/controllers/index"],
      "@applicationLayer|dtos": ["src/application/dtos/index"],
      // "@applicationlayer|controllers/*": ["src/application/****/*"]

      "@domainLayer|entities": ["src/domain/entities"],
      "@domainLayer|interfaces": ["src/domain/interfaces"],
      "@domainLayer|enums": ["src/domain/enums"],
      "@domainLayer|helpers": ["src/domain/helpers"],
      "@domainLayer|providers": ["src/domain/providers"],
      "@domainLayer|services": ["src/domain/providers"],
      "@domainLayer|modules": ["src/domain/modules"],
      // "@domainLayer|services/*": ["src/application/***/*"],

      "@infrastructureLayer|config": ["src/infrastructure/config/index"],
      "@infrastructureLayer|database": ["src/infrastructure/database/index"],
      "@infrastructureLayer|repositories": ["src/infrastructure/repositories"],
      "@infrastructureLayer|modules": ["src/infrastructure/modules/index"]
      // "@infrastructureLayer|modules/*": ["src/infrastructure/***/*"],
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  }
}
